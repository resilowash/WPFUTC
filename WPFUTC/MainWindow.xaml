<Window x:Class="WPFUTC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUTC"
        mc:Ignorable="d"
        Title="UTC Time" Height="80" Width="350">
    <Border Padding="5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Label FontSize="11" FontWeight="ExtraBold" Grid.Column="0" Margin="0">Time in UTC:</Label>
        <TextBox Name="timebox" FontSize="11" Grid.Column="1" BorderBrush="Black" Margin="2"/>
        <CheckBox x:Name="radio24HrTime" Content="24 Hr." HorizontalAlignment="Left" FontSize="11"  ClickMode="Press" Click="RadioButton_Checked" Grid.Column="2" Margin="30 2"/>


    </Grid>
    </Border>
</Window>
